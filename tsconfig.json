  "compilerOptions": {
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "target": "ESNext",
    "strict": true
  },
  "include": ["src"]
}
